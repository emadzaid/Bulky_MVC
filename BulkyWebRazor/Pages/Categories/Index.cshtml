@page
@model BulkyWebRazor.Pages.Categories.IndexModel

<div class="container">

	<div class="row pt-4 pb-2">
		<div class="col-6"><h1>Category</h1></div>
		<div class="col-6 text-end"> <a class="btn btn-primary" asp-page ="/categories/create"> <i class="bi bi-plus-circle"></i> Add New Category </a> </div>
	</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Display Order</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var obj in Model.CategoryList.OrderBy(obj => obj.DisplayOrder))
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.DisplayOrder</td>
						<td class="text-center"><a asp-page="/categories/edit"  asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a></td>
						<td class="text-center"><a asp-page="/categories/delete"  asp-route-id="@obj.Id" class="btn btn-danger "> <i class="bi bi-trash3"></i> Delete</a></td>

					</tr>
				}

			</tbody>

		</table>

	</div>

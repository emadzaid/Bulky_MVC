@page
@model BulkyWebRazor.Pages.Categories.DeleteModel


<div class="container">

	<form method="post">
		<input asp-for="category.Id" hidden />
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">Edit Category</h2>
				<hr />
			</div>

			<div class="mb-3 p-1 row">
				<label asp-for="category.Name" class="p-0"></label>
				<input asp-for="category.Name" disabled type="text" class="form-control" />

			</div>

			<div class="mb-3 p-1 row">
				<label asp-for="category.DisplayOrder" class="p-0"></label>
				<input asp-for="category.DisplayOrder" disabled type="text" class="form-control" />
			</div>

			<div class="row mb-3">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-danger form-control">Delete</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back to List</a>
				</div>

			</div>


		</div>

	</form>
</div>

@model Category;

<div class="container">

	<form method="post">
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">Edit Category</h2>
				<hr />
			</div>

			<div asp-validation-summary="ModelOnly"></div>
			<div class="mb-3 p-1 row">
				<label asp-for="Name" class="p-0"></label>
				<input asp-for="Name" type="text" class="form-control" />
				<span asp-validation-for="Name"></span>

			</div>

			<div class="mb-3 p-1 row">
				<label asp-for="DisplayOrder" class="p-0"></label>
				<input asp-for="DisplayOrder" type="text" class="form-control" />
				<span asp-validation-for="DisplayOrder"></span>
			</div>

			<div class="row mb-3">
				<div class="col-6 col-md-3">
					<button asp-controller="Category" asp-action="Edit" type="submit" class="btn btn-primary form-control">Update</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
				</div>

			</div>


		</div>

	</form>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}

